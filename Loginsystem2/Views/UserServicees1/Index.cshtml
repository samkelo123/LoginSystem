@model IEnumerable<Loginsystem2.Models.UserServicee>

@{
    Layout = "~/Views/_LayoutPage4.cshtml";
}


<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>

    <a href="@Url.Action("Create", "UserServicees1")"><i class="btn btn-success btn-sm">Create</i></a>
    <br />
    <br />
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AdvertiserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Service)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contacts)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.image)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AdvertiserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Service)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Contacts)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location)
                </td>
                <td>
                    <img src="@Url.Content(item.image)" width="70" height="70" class="img-rounded" />
                </td>
                <td>
                    <a href="@Url.Action("Edit", "UserServicees1", new { id = item.Id })">
                        <i class="fa fa-edit btn btn-info btn-sm"></i>
                    </a> |
                    <a href="@Url.Action("Details", "UserServicees1", new { id = item.Id })">
                        <i class="btn btn-warning btn-sm">Details</i>
                    </a> |
                    <a href="@Url.Action("Delete", "UserServicees1", new { id = item.Id })">
                        <i class="btn btn-danger btn-sm">Delete</i>
                    </a>
                </td>
            </tr>
        }

    </table>
</body>
</html>